{
  "version": "17.8.0",
  "description": "An Angular library designed to simplify the creation and manipulation of dynamic flow. Provides components for flows, nodes, and connections, automating node manipulation and inter-node connections.",
  "author": "Siarhei Huzarevich",
  "homepage": "https://flow.foblex.com",
  "docs": "https://flow.foblex.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foblex/flow.git"
  },
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start-shared": "ng serve --host 0.0.0.0",
    "build": "ng build",
    "build-flow": "ng build f-flow && tsc -p projects/f-flow/tsconfig.schematics.json && copyfiles -u 2 \"projects/f-flow/schematics/*/schema.json\" \"projects/f-flow/schematics/*/files/**\" \"projects/f-flow/schematics/collection.json\" dist/f-flow",
    "watch": "ng build --watch --configuration development",
    "test": "ng test f-flow",
    "publish": "npm run build-flow && cd dist/f-flow && npm publish",
    "release": "standard-version --skip.commit",
    "release:minor": "standard-version --release-as minor --skip.commit",
    "release:major": "standard-version --release-as major --skip.commit",
    "serve:ssr:f-flow-portal": "ng build && node dist/f-flow-portal/server/server.mjs",
    "cypress:run": "cypress run",
    "lint": "ng lint",
    "prepare": "husky"
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "docs",
        "section": "Documentation"
      },
      {
        "type": "test",
        "section": "Tests"
      },
      {
        "type": "ci",
        "section": "Continuous Integration"
      },
      {
        "type": "chore",
        "hidden": true
      }
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css,scss}": [
      "prettier --write"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "18.2.13",
    "@angular/cdk": "18.2.14",
    "@angular/common": "18.2.13",
    "@angular/compiler": "18.2.13",
    "@angular/core": "18.2.13",
    "@angular/forms": "18.2.13",
    "@angular/material": "18.2.14",
    "@angular/platform-browser": "18.2.13",
    "@angular/platform-browser-dynamic": "18.2.13",
    "@angular/platform-server": "18.2.13",
    "@angular/router": "18.2.13",
    "@angular/ssr": "18.2.19",
    "@cypress/angular": "^2.1.0",
    "@foblex/2d": "^1.2.1",
    "@foblex/m-render": "^2.9.5",
    "@foblex/mediator": "1.1.3",
    "@foblex/mutator": "^1.0.7",
    "@foblex/platform": "1.0.4",
    "@foblex/utils": "1.1.1",
    "axios": "^1.11.0",
    "chokidar": "^4.0.3",
    "cookie-parser": "^1.4.7",
    "dagre": "^0.8.5",
    "dotenv": "^17.2.1",
    "elkjs": "^0.9.3",
    "express": "^4.21.2",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "18.2.19",
    "@angular/cli": "18.2.19",
    "@angular/compiler-cli": "18.2.13",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/dagre": "^0.7.52",
    "@types/express": "^4.17.17",
    "@types/html2canvas": "^1.0.0",
    "@types/jasmine": "~5.1.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^18.18.0",
    "angular-eslint": "20.2.0",
    "copyfiles": "2.4.1",
    "cypress": "^13.15.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.1.6",
    "ng-packagr": "^18.1.0",
    "packagename": "^2.0.1",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "typescript": "~5.5.2",
    "typescript-eslint": "8.40.0"
  }
}
